<%= simple_form_for @user do |f| %>
  <%= f.input :first_name,
  input_html: { class: "form-styling" } %>
  <%= f.input :last_name,
  input_html: { class: "form-styling" } %>
  <%= f.input :address,
  input_html: { class: "form-styling" } %>
  <%= f.input :photo, as: :file,
  input_html: { class: "submit-img" } %>
  <%= f.button :submit, :class => "submit-button" %>
<% end %>



